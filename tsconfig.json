{
  "compilerOptions": {
    "lib": ["es6"],
    "types": ["node", "jest"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "vendor/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["clients", "coverage", "jest*", "dist"]
}
